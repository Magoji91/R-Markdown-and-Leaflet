
Origin of the Data
http://simplemaps.com/data/world-cities

#I-)Essential Packages
require(leaflet)
require(data.table)
require(dplyr)
library(sp)
install.packages("rgdal")
library(rgdal)
install.packages("maptools")
library(KernSmooth)

#II-)Set work Directory
getwd()
setwd("/Users/smsanda/Documents/")

#III-)Processing Data
geodata <- read.csv(file = "simplemaps-worldcities-basic.csv",
header = TRUE, 
sep = ",", )
View(geodata)
city <- subset(geodata, select = c("city", "pop","lat", "lng"))
colnames(city) <- c("city", "population", "latitude", "longitude")
city$popsep <- format(city$population, big.mark=",",scientific=FALSE)
View(geodata)
city$province <- do.call(paste, c(city[c("city", "popsep")], sep = "    population:"))
library(leaflet)
my_map<-city%>%
leaflet()%>%
addTiles()%>%
addCircles(weight = 3, radius = (city$population)/200, popup = strwrap(city$province))
my_map
